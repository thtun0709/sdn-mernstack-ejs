    }
  
    .login-link {
      color: #c41e3a;
      text-decoration: none;
      font-weight: 500;
    }
  
    .login-link:hover {
      text-decoration: underline;
    }
  
    /* === Responsive === */
    @media (max-width: 768px) {
      .detail {
        flex-direction: column;
        align-items: center;
        text-align: center;
      }
  
      .detail img {
        width: 100%;
        max-width: 400px;
      }
    }
  </style>
  
</head>

<body>
